---
import Layout from "./Layout.astro";

import { slugify, formatDate } from "../js/utils";

const { frontmatter } = Astro.props;
const { title, description, date, image, category, standard, author } =
  frontmatter;
---

<Layout {title} {description}>
  <header>
    <div class="container">
      <img src=`/assets/blogimages/${image.src}` alt={image.alt} />
      <h1 class="h2">{title}</h1>
      <div class="byline">
        <p>
          By <a href={`/author/${slugify(author)}`}>{author}</a> on {
            formatDate(date)
          }
        </p>
        <div class="tags">
          <a href={`/category/${slugify(category)}`}>{category}</a>
          {
            standard && (
              <a href={`/standard/${slugify(standard)}`}>{standard}</a>
            )
          }
        </div>
      </div>
    </div>
  </header>
  <article class="article">
    <slot />
  </article>
</Layout>

<style>
  header {
    padding-top: 5rem;
  }

  header .container > img {
    display: block;
    width: 100%;
    height: 22rem;
    margin-bottom: 1rem;
  }

  .byline {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    padding-inline: 3rem;
    margin-bottom: 3rem;
  }
  .article {
    max-width: var(--m-width);
    margin-inline: auto;
    padding-inline: 3rem;
    font-size: var(--step-0);
  }

  .tags {
    display: flex;
    gap: 1rem;
    padding: 0.5rem;
  }
  .tags a {
    color: var(--neutral-100);
    transition: all 250ms ease-in-out;
  }

  .tags a:hover {
    background-color: var(--blue-700);
  }

  .tags a {
    width: fit-content;
    background-color: var(--blue-400);
    padding: 0.2em 0.75em;
  }

  .byline p a {
    text-decoration: underline 1.5px;
    text-underline-offset: 2px;
  }

  @media only screen and (max-width: 60rem) {
    .byline {
      flex-direction: column;
      gap: 1rem;
      padding-inline: 1rem;
      margin-bottom: 2rem;
    }

    .article {
      padding-inline: 1rem;
    }
  }
</style>
