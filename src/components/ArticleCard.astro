---
const { title, description, date, image, url, standard, category, author } =
  Astro.props;

import { formatDate } from "../js/utils";
---

<article>
  <a href={url}
    ><img src={`/assets/blogimages/${image.src}`} alt={image.alt} /></a
  >
  <div class="tags">
    <a href={`/category/${category}`}>{category}</a>
    {standard && <a href={`/standard/${standard}`}>{standard}</a>}
  </div>
  <hr />

  <div>
    <p class="eyebrow">Posted on {formatDate(date)}</p>
    <p class="eyebrow mb">By <a href={`/author/${author}`}>{author}</a></p>
    <hr />
    <a href={url}>
      <h2 class="title">
        {title}
      </h2>
    </a>
    <p class="desc">
      {description}
    </p>
  </div>
  <hr />
  <a class="main-link" href={url}
    ><span>Read Article</span><svg
      class="arrow"
      xmlns="http://www.w3.org/2000/svg"
      width="32"
      height="32"
      viewBox="0 0 24 24"
      ><path
        fill="currentColor"
        d="m14 18l-1.4-1.45L16.15 13H4v-2h12.15L12.6 7.45L14 6l6 6l-6 6Z"
      ></path></svg
    >
  </a>
</article>

<style>
  article {
    width: 22rem;
    color: var(--blue-700);
    background-color: var(--neutral-100);
    box-shadow: 10px 10px 18px -4px rgba(0, 0, 0, 0.25);
    flex-shrink: 0;
    align-self: flex-start;
  }

  article img {
    display: block;
    width: 100%;
    height: 11rem;
    object-fit: cover;
  }

  article > div {
    padding: 1rem;
  }

  .eyebrow {
    font-size: 0.8rem;
    letter-spacing: 2px;
    margin-bottom: 0.25em;
  }

  .eyebrow a {
    text-decoration: underline 1.5px;
    text-underline-offset: 2px;
  }

  .desc {
    color: var(--neutral-400);
  }

  h2.title {
    color: var(--blue-700);
    margin-top: 2rem;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    width: 100%;
    gap: 1rem;
    padding: 0.5rem;
    width: 100%;
  }

  .tags a {
    display: block;
    width: fit-content;
    background-color: var(--blue-400);
    padding: 0.2em 0.75em;
    font-size: 0.85rem;
    color: var(--neutral-100);
    transition: all 250ms ease-in-out;
  }

  .tags a:hover {
    background-color: var(--blue-700);
  }

  a.main-link {
    display: flex;
    align-items: center;
    padding: 1.5rem 2rem;
    transition: all 250ms ease-in-out;
  }

  .arrow {
    transition: all 250ms ease-in-out;
  }

  a.main-link:hover {
    background-color: var(--blue-400);
    color: var(--neutral-100);
  }
  a.main-link:hover .arrow {
    transform: translateX(150px);
  }

  .mb {
    margin-bottom: 1rem;
  }
</style>
