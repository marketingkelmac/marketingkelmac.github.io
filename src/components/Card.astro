---
interface Props {
  cardImage: string;
  cardName: string;
  cardDesc: string;
  cardLink: string;
  cardLinkText: string;
  imgAlt: string;
}

import { Image } from "astro:assets";
const {
  cardImage,
  cardName,
  cardDesc,
  cardLink,
  cardLinkText,
  imgAlt = "",
  ...rest
} = Astro.props;
---

<div class="card" {...rest}>
  <Image
    src={`/assets/images/${cardImage}`}
    alt={imgAlt}
    width={350}
    height={200}
  />
  <div>
    <div>
      <p class="name">{cardName}</p>
      <p>{cardDesc}</p>
    </div>
    <a href={cardLink}>{cardLinkText}</a>
  </div>
</div>

<style>
  .card {
    display: flex;
    flex-direction: column;
    min-height: 30rem;
    width: 20rem;
    background-color: var(--neutral-100);
    color: var(--blue-700);
  }

  .card > div {
    padding: 1rem;
    height: 100%;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: space-between;
  }

  .name {
    font-weight: 700;
    font-size: 1.25rem;
    margin-bottom: 0.5em;
  }

  .card img {
    object-fit: cover;
  }

  a {
    background-color: var(--blue-700);
    color: var(--neutral-100);
    padding: 0.5em 1em;
    align-self: center;
  }

  a:hover {
    color: var(--neutral-100);
  }
</style>
